<script type="text/javascript">
  jQuery(document).ready(function(){
    jQuery(".untruncate").click(function(event){
      event.preventDefault();
      var text = jQuery(this).parent().parent().children(".untruncated_text").html();
      jQuery(this).parent().parent().children(".original_text").html(text);
    });
  });
</script>


<div id="projects_content">
  <h2 style="margin: 2em 0 0">
    <span style="font-size: x-large; margin-right: 1.5em;">Projects Using This Ontology</span>
    <%if session[:user].nil? %>
      <a href="/login?redirect=<%=URI.escape("/projects/new")%>">Create new project</a>
    <%else %>
      <a href="/projects/new">Create new project</a>
    <%end %>
  </h2>

  <% if @projects.length == 0 %>
    No projects available.
  <% else %>
    <table class="zebra" style="border:0px;float:left;"width="60%" cellpadding="0" cellspacing="0">
      <thead>
        <th>Project</th>
        <th>Description</th>
        <th>People</th>
        <th>Institution</th>
      </thead>
      <tbody>
        <%for project in @projects %>
          <tr>
              <td>
                  <%=link_to project.name, project.homepage %>
                  <br style="margin-bottom: 5px;"/>
                  <%if isOwner?(project.id) %><span style="font-size: x-small;">(<%=link_to "edit",edit_project_path(project) %> | 
                  <%= link_to 'delete', project, :confirm => 'Are you sure?', :method => :delete %>)</span><%end %>
              </td>
              <td style="width: 200px;">
                  <div class="original_text"><%=truncate(project.description, :length => 100, :separator => " ", :omission => "<a class='untruncate' href=''>...</a>") %></div>
                  <div class="untruncated_text" style="display: none;"><%=project.description%></div>
              </td>
              <td>
                  <div class="original_text"><%=truncate(project.people, :length => 50, :separator => " ", :omission => "<a class='untruncate' href=''>...</a>") %></div>
                  <div class="untruncated_text" style="display: none;"><%=project.people%></div>
              </td>
              <td>
                  <%=project.institution %>
              </td>
        <%end %>
      </tbody>
    </table>
  <% end %>
</div>